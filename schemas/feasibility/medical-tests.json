{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "http://dm-matrix.com/medical-test",
  "description": "Medical test",
  "title": "medical-tests.csv",
  "type": "object",
  "properties": {
    "patient-id": {
      "$ref": "../_common-types.json#/$defs/patient-id",
      "title": "ID пациента"
    },
    "visit-id": {
      "$ref": "../_common-types.json#/$defs/visit-id",
      "title": "ID визита"
    },
    "test-name": {
      "type": "string",
      "title": "Наименование анализа"
    },
    "test-parameter": {
      "type": "string",
      "title": "Параметр в анализе"
    },
    "test-code": {
      "type": "string",
      "title": "Код по справочнику"
    },
    "value": {
      "type": "number",
      "title": "Результат числовой"
    },
    "test-date": {
      "type": "string",
      "title": "Дата проведения анализа",
      "format": "date"
    }
  },
  "required": ["patient-id", "visit-id", "test-name", "test-parameter", "test-code", "value", "test-date"]
}
